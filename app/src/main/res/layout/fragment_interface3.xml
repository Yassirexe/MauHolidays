<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interface3"
    android:background="@drawable/homebg">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/backbutton"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"

        >
    </ImageView>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Mascarene islands"
            android:onClick="onRadioButtonClicked"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />

        <RadioButton android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:onClick="onRadioButtonClicked"
            android:text="Ile de France"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"


            />


        <RadioButton android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="St Brandon"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioButton android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Dina Arobi"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

           />



    </RadioGroup>




    <TextView

        android:text="Discovery of Mauritius"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="130dp"
        android:layout_gravity="center_horizontal"/>

    <FrameLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:background="@color/black" />

    <TextView

        android:text="1.What name did the Arabs gave Mauritius when they came on the island?"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />



    <TextView

        android:text="2. What is the name of the first Portuguese sailor?"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/donpedro"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Don Pedro"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="330dp"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

        <RadioButton android:id="@+id/domingo"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:onClick="onRadioButtonClicked"
            android:text="Domingo Fernandez Pereira"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"


            />


        <RadioButton android:id="@+id/bruno"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Bruno Fernandes"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioButton android:id="@+id/pereira"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Don Pereira"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

    </RadioGroup>


    <TextView

        android:text="3. What name did the Portuguese give mauritius?"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="430dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/cirne"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Cirne"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="460dp"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

        <RadioButton android:id="@+id/lapasse"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:onClick="onRadioButtonClicked"
            android:text="Ile de la Passe"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"


            />


        <RadioButton android:id="@+id/portugal"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Portugal"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioButton android:id="@+id/rodrigues"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Rodrigues"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

    </RadioGroup>


    <TextView

        android:text="4. Which bird did the Portuguese find on the island?"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="555dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/kestrel"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Kestrel"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="590dp"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

        <RadioButton android:id="@+id/dodo"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:onClick="onRadioButtonClicked"
            android:text="Dodo"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"


            />


        <RadioButton android:id="@+id/parakeet"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Mauritius Parakeet"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioButton android:id="@+id/pigeon"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Pink Pigeon"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

    </RadioGroup>


</FrameLayout>