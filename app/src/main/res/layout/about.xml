<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homebg"
        tools:context=".inter1">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/backbutton">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="60dp"
            android:background="@color/teal_700"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="About us"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="This software application  MauHolidays App has been developed for mobile devices created by Team B. The Application is a virtual tour guide  that can be used interactively. The app contains points of interest,quiz and history about Mauritius, descriptions and photos for each specific tour and description of different kinds of restaurant in Mauritius. Best used to pre plan your trip.
"
            android:layout_marginTop="140dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact"
            android:layout_marginTop="370dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Email : MauHolidays@TouristApp.com"
            android:layout_marginTop="410dp"
            android:textSize="22dp"
            android:textStyle="bold"

            android:layout_marginLeft="19dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact Number: +230 5456 3478"
            android:layout_marginTop="450dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_marginLeft="19dp"/>



    </RelativeLayout>
</FrameLayout>