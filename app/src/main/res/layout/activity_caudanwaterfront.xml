<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".caudanwaterfront">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/caudan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/caudan"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caudan Waterfront"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_marginTop="410dp"
        android:layout_marginStart="20dp"
        />

    <ImageButton
        android:id="@+id/favourite5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_favorite_border_24"
        android:layout_marginTop="410dp"
        android:layout_marginStart="360dp"
        />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_back"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        />

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_person_outline_24"
        android:layout_marginTop="25dp"
        android:layout_marginStart="325dp"
        />

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_menu_24"
        android:layout_marginTop="25dp"
        android:layout_marginStart="365dp"
        android:layout_marginEnd="15dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="40dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="65dp"
        android:layout_marginStart="15dp"
        app:cardBackgroundColor="@color/lg">

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/search"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/outline_search_24"
        android:layout_marginTop="75dp"
        android:layout_marginStart="25dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="65dp"
        />

    <TextView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="465dp"
        android:text="Le Caudan Waterfront is a commercial development in Port Louis, Mauritius. It includes shops, banking facilities, casinos, cinemas, restaurants, a marina and a five star hotel (Le Labourdonnais)."
        android:textAlignment="center"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/location"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/baseline_location_on_24"
        android:layout_marginTop="565dp"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port-Louis, Mauritius"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="565dp"
        android:layout_marginStart="45dp"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/baseline_time_24"
        android:layout_marginTop="590dp"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07 00 - 00 00"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="590dp"
        android:layout_marginStart="45dp"
        />

    <TextView
        android:id="@+id/num"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/baseline_local_phone_24"
        android:layout_marginTop="615dp"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+230 211 9500"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="615dp"
        android:layout_marginStart="45dp"
        />

</RelativeLayout>