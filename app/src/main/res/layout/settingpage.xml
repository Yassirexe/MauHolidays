<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".SettingPage"
    android:layout_height="match_parent"
    android:orientation="horizontal">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homebg"
        tools:context=".inter1">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/backbutton"></ImageView>

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="559dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:paddingTop="4dp"
                android:text="Settings"
                android:textAlignment="center"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>



            <ImageView
                android:layout_width="94dp"
                android:layout_height="96dp"
                android:layout_gravity="center"

                android:src="@drawable/baseline_account_circle_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Kawshar Emanden"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+230 5904 5641"
                android:textColor="#595454"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_back_secondary"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="351dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:padding="0dp"
                        android:src="@drawable/baseline_circle_notifications_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:text="Notifications"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="22dp"
                        android:switchMinWidth="65dp"
                        android:textOff="off"
                        android:textOn="on"
                        android:thumb="@drawable/thumb"
                        app:showText="true"
                        app:track="@drawable/track" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="351dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:padding="0dp"
                        android:src="@drawable/baseline_data_saver_off_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:text="Data Saver"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="22dp"
                        android:switchMinWidth="65dp"
                        android:textOff="off"
                        android:textOn="on"
                        android:thumb="@drawable/thumb"
                        app:showText="true"
                        app:track="@drawable/track" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="351dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:padding="0dp"
                        android:src="@drawable/baseline_security_24" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:text="Privacy Policy"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/buttonPrivacy"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="260dp"
                        android:src="@drawable/baseline_navigate_next_24" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="351dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:padding="0dp"
                        android:src="@drawable/baseline_help_24" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:text="Help"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/buttonHelp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="260dp"
                        android:src="@drawable/baseline_navigate_next_24" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="351dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:padding="0dp"
                        android:src="@drawable/baseline_info_24" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/buttonAbout"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="260dp"
                        android:src="@drawable/baseline_navigate_next_24" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="351dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:padding="0dp"
                        android:src="@drawable/baseline_logout_24" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:text="Log Out"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="260dp"
                        android:src="@drawable/baseline_navigate_next_24" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

















