<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="screen10"
    android:background="@drawable/homebg">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/backbutton"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"

        >
    </ImageView>

    <TextView

        android:text="The French Period"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal"/>


    <ScrollView
        android:id="@+id/scrollView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">


    <TextView
        android:text="Abandoned by the Dutch, the island became a French colony when, in September 1715, Guillaume Dufresne D'Arsel landed and took possession of this precious port of call on the route to India. He named the island 'Isle de France', but it was only in 1721 that the French started their occupation."
        android:layout_marginTop="140dp"
        android:layout_marginStart="50dp"
        android:textAlignment="center"
        android:layout_width="320dp"
        android:layout_height="110dp"

        />
    <ImageView
        android:layout_width="290dp"
        android:layout_height="160dp"
        android:background="@drawable/frenchperiod"
        android:layout_marginTop="265dp"
        android:layout_marginStart="55dp"

        >
    </ImageView>


    <TextView
        android:text="However, it was only as from 1735, with the arrival of the most illustrious of French governor, Mahé de La Bourdonnais, that the 'Isle de France' started developing effectively."
        android:layout_marginTop="450dp"
        android:layout_marginStart="50dp"
        android:textAlignment="center"
        android:layout_width="320dp"
        android:layout_height="80dp"
        />

    <TextView
        android:text="Mahé de La Bourdonnais established Port Louis as a naval base and a ship-building centre. Under his governorship, numerous buildings were built, a number of which are still standing today - part of Government House, the Chateau de Mon Plaisir at Pamplemousses, the Line Barracks."
        android:layout_marginTop="530dp"
        android:layout_marginStart="50dp"
        android:textAlignment="center"
        android:layout_width="320dp"
        android:layout_height="120dp"
        />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginTop="660dp"
        android:layout_marginStart="310dp"
        android:backgroundTint="@color/material_dynamic_primary95"
        android:textColor="@color/black"
        android:text="Next"
        android:textSize="15dp"
        />

    </RelativeLayout>

    </ScrollView>



</FrameLayout>