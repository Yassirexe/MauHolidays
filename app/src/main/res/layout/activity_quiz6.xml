<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interface5"
    android:background="@drawable/homebg">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/backbutton"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"

        >
    </ImageView>


    <TextView

        android:text="Arrival of the Dutch"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal"/>


    <TextView

        android:text="1.In which year did the Dutch land in Mauritius?"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="140dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="1968"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="175dp"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

        <RadioButton android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:onClick="onRadioButtonClicked"
            android:text="1940"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"


            />


        <RadioButton android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="1598"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioButton android:id="@+id/fourth"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="1999"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

    </RadioGroup>


    <TextView

        android:text="2. What name did the Dutch give the island?"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="275dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/mascarene"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Mascarene Islands"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="310dp"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

        <RadioButton android:id="@+id/cirne"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:onClick="onRadioButtonClicked"
            android:text="Cirne"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"


            />


        <RadioButton android:id="@+id/mauritius"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Mauritius"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioButton android:id="@+id/brandon"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="St Brandon"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

    </RadioGroup>


    <TextView

        android:text="3. In which year did the Dutch attempted to settle in Mauritius?"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="410dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/A"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="1638"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="460dp"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

        <RadioButton android:id="@+id/B"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:onClick="onRadioButtonClicked"
            android:text="1538"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"


            />


        <RadioButton android:id="@+id/C"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="1660"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioButton android:id="@+id/D"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="1520"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

    </RadioGroup>


    <TextView

        android:text="4. For how many years did the Dutch stay on the island?"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="560dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        />



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="3"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="590dp"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

        <RadioButton android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:onClick="onRadioButtonClicked"
            android:text="7"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"


            />


        <RadioButton android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="20"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RadioButton android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="12"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            />

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical" />


    <Button
        android:id="@+id/nextButton"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="310dp"
        android:backgroundTint="@color/material_dynamic_primary95"
        android:textColor="@color/black"
        android:text="Next" />




</FrameLayout>