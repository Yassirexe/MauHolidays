    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#89CFEF	"
        android:paddingBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="bottom">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homescreen1"
            android:text="Home"
            android:drawableTop="@drawable/baseline_home_24"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exploreScreen"
            android:text="Search"
            android:drawableTop="@drawable/baseline_explore_24"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favscreen"
            android:text="Favourites"
            android:drawableTop="@drawable/baseline_favorite_24"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profilescreen"
            android:text="Profile"
