<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen789">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/backbutton" />


        <TextView

            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginStart="100dp"
            android:fontFamily="sans-serif-black"
            android:paddingTop="10dp"
            android:text="Arrival of the Dutch"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@color/black">

        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <TextView

                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:text="1.In which year did the Dutch land on Mauritius?"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp"
                android:id="@+id/q1quiztext"
                />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question1"
                android:layout_below="@+id/q1quiztext">

                <RadioButton
                    android:id="@+id/first"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="1968"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="15sp"

                    />

                <RadioButton
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="1940"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="15sp"


                    />


                <RadioButton
                    android:id="@+id/third"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="1598"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="1999"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="15sp" />
            </RadioGroup>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="400dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:text="2. What name did the Dutch give the island?"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp"
                android:layout_below="@+id/question1"
                android:id="@+id/question2text"
                />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question2text"
                android:id="@+id/question2">

                <RadioButton
                    android:id="@+id/mascarene"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="Mascarene Islands"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="15sp"

                    />

                <RadioButton
                    android:id="@+id/cirne"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="Cirne"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="15sp"


                    />


                <RadioButton
                    android:id="@+id/mauritius"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="Mauritius"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/brandon"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:text="St Brandon"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="15sp"

                    />
            </RadioGroup>


<!--            screen8-->

            <TextView
                android:text="3. In which year did the Dutch attempt to settle in Mauritius?"
                android:layout_width="400dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:textAlignment="viewStart"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_below="@+id/question2"
                android:id="@+id/question3text"
                />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question3"
                android:layout_below="@id/question3text"
                >
                <RadioButton android:id="@+id/A"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="1638"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"

                    />

                <RadioButton android:id="@+id/B"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="1538"
                    android:layout_marginStart="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"


                    />


                <RadioButton android:id="@+id/C"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="1660"
                    android:layout_marginStart="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                <RadioButton android:id="@+id/D"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="1520"
                    android:layout_marginStart="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"

                    />

            </RadioGroup>


            <TextView

                android:text="4. For how many years did the Dutch stay on the island?"
                android:layout_width="400dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:textAlignment="viewStart"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/question4text"
                android:layout_below="@id/question3"
                />



            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question4"
                android:layout_below="@id/question4text"
                >
                <RadioButton android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="3"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"

                    />

                <RadioButton android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="7"
                    android:layout_marginStart="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"


                    />


                <RadioButton android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="20"
                    android:layout_marginStart="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                <RadioButton android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="12"
                    android:layout_marginStart="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"

                    />

            </RadioGroup>

<!--            screen9-->

            <TextView

                android:text="5.  When did the Dutch leave Mauritius?"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/question4"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:textAlignment="viewStart"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/question5text"
                />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question5"
                android:layout_below="@+id/question5text"
                >
                <RadioButton
                    android:id="@+id/questionfivea"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="1700"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    />

                <RadioButton
                    android:id="@+id/questionfiveb"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="1710"
                    android:layout_marginStart="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    />


                <RadioButton
                    android:id="@+id/questionfivec"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="1720"
                    android:onClick="onRadioButtonClicked"
                    android:layout_marginStart="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                <RadioButton
                    android:id="@+id/questionfived"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="1730"
                    android:layout_marginStart="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"

                    />

            </RadioGroup>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/question5"
                android:text="Submit"
                android:layout_centerHorizontal="true"
                android:id="@+id/quizsubmit"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>