<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screenPlaces"
    tools:context=".hotel_amber">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp"
        android:id="@+id/imageContent">

        <ImageView
            android:id="@+id/caudan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ambre"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amber Hotel"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_above="@+id/imageDescription"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        />

    <CheckBox
        android:id="@+id/favourite5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageDescription"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="355dp"
        android:contentDescription="add to favourite"
        />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_back"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:contentDescription="go back"
        />

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_person_outline_24"
        android:layout_marginTop="25dp"
        android:layout_marginStart="325dp"
        android:contentDescription="go to profile"
        />

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_menu_24"
        android:layout_marginTop="25dp"
        android:layout_marginStart="365dp"
        android:layout_marginEnd="15dp"
        />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageContent"
        android:id="@+id/imageDescription"
        >

        <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="It is the perfect place to catch the sunrise. Ambre is the ultimate getaway for young people and vacationers who want to escape from everyday life. An ideal place to cool off, mix and mingle, laugh in good company, connect and reconnect, and dive into new experiences together."
            android:textAlignment="center"
            android:id="@+id/textContent"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/baseline_location_on_24"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/textContent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belle Mare, Mauritius"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="45dp"
            android:id="@+id/locationContent"
            android:layout_below="@id/textContent"
            />

        <ImageView
            android:id="@+id/time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/baseline_time_24"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/location"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Always open"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="45dp"
            android:layout_below="@id/locationContent"
            android:id="@+id/openTime"
            />

        <ImageView
            android:id="@+id/num"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/baseline_local_phone_24"
            android:layout_marginTop="14dp"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/openTime"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+230 401-8188"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="45dp"
            android:layout_below="@id/openTime"
            />

    </RelativeLayout>



</RelativeLayout>