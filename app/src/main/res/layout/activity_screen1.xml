<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen1"
    android:background="@drawable/homebg">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/backbutton"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"

        >
    </ImageView>



    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:text="Learn More"
        android:textAlignment="center"
        android:textSize="20sp"

        />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/monumentb"
        android:layout_marginTop="180dp"
        android:layout_marginStart="35dp"
        android:clickable="true"
        android:id="@+id/Monuments"
        android:contentDescription="a button"
        >
    </ImageView>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/publicholidayb"
        android:layout_marginTop="180dp"
        android:layout_marginStart="225dp"
        android:clickable="true"
        android:id="@+id/publicHolidays"


        >
    </ImageView>



    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/riddlesb"
        android:layout_marginTop="380dp"
        android:layout_marginStart="35dp"
        android:clickable="true"
        android:id="@+id/riddles"


        >
    </ImageView>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/sloganb"
        android:layout_marginTop="380dp"
        android:layout_marginStart="225dp"
        android:clickable="true"
        android:id="@+id/slogans"
        android:contentDescription="a button"
        >
    </ImageView>


    <Button
        android:id="@+id/nextButton"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginTop="660dp"
        android:layout_marginStart="310dp"
        android:backgroundTint="@color/material_dynamic_primary95"
        android:textColor="@color/black"
        android:text="Next"
        android:textSize="15dp"
        />




</FrameLayout>